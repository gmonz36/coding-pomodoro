{
  "name": "coding-pomodoro",
  "displayName": "coding-pomodoro",
  "description": "Pomodoro timer for coding",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "icon": "tomato.svg",
  "contributes": {
    "commands": [
      {
        "command": "extension.startPomodoro",
        "title": "Start Pomodoro"
      },
      {
        "command": "extension.pausePomodoro",
        "title": "Pause Pomodoro"
      },
      {
        "command": "extension.resetPomodoro",
        "title": "Reset Pomodoro"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Pomodoro Configuration",
      "properties": {
        "pomodoro.workTime": {
          "type": "number",
          "default": 25,
          "description": "Time of work, in minutes."
        },
        "pomodoro.pauseTime": {
          "type": "number",
          "default": 5,
          "description": "Time of pause, in minutes"
        },
        "pomodoro.repeat": {
          "type": "number",
          "default": 4,
          "description": "Number of repeat before long break"
        }
      }
    }
  },
  "keywords": [
    "Pomodoro",
    "Timer",
    "Task"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "fix:format": "prettier --write '**/*.{js,ts,json,md}'"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "prettier": "^2.7.1"
  }
}
